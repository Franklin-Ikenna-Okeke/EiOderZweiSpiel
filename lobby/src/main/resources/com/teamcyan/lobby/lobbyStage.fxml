<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane stylesheets="@lobby.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teamcyan.lobby.LobbyController">
    <ImageView fx:id="backgroundView">
        <image>
            <Image url="@images/lobby_background.png" />
        </image>
    </ImageView>
    <AnchorPane fx:id="card" layoutX="653.0" layoutY="599.0" prefHeight="296.0" prefWidth="484.0" styleClass="card">
        <TextField fx:id="usernameField" layoutX="77.0" layoutY="36.0" prefWidth="444" promptText="Username" />
        <PasswordField fx:id="passwordField" layoutX="77.0" layoutY="85.0" prefWidth="444" promptText="Password" />
        <Button fx:id="sign_in" layoutX="23.0" layoutY="161.0" onMouseClicked="#createNewUser" prefHeight="38.0" prefWidth="107.0" styleClass="sign-in-button" text="Sign In" />
        <Button fx:id="exit" layoutX="356.0" layoutY="161.0" onMouseClicked="#exitGame" styleClass="sign-in-button" text="Exit" />
        <Button fx:id="guest" layoutX="167.0" layoutY="161.0" onMouseClicked="#playGame" styleClass="sign-in-button" text="Play as a Guest" />
    </AnchorPane>
</AnchorPane>
