<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="562.0" prefWidth="785.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eoz.client.lobbyToTable.JoinGameController">
    <VBox alignment="CENTER" layoutX="243.0" layoutY="115.0" prefHeight="366.0" prefWidth="300.0" spacing="20">
        <Label text="Join Game Room" textFill="#333">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <TextField fx:id="gameIdField" onAction="#joinGame" prefHeight="40.0" prefWidth="300.0" promptText="Enter Game ID" />
        <HBox spacing="10">
            <Button fx:id="joinGameButton" onAction="#joinGame" prefHeight="26.0" prefWidth="99.0" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" text="Join Game" />
         <Label prefHeight="18.0" prefWidth="82.0" />
            <Button fx:id="backToGameLobby" onAction="#backToLobby" prefHeight="26.0" prefWidth="89.0" style="-fx-background-color: #ececec;" text="Back" />
        </HBox>
        <Label text="Available Games" textFill="#666" />
        <ListView fx:id="gameSessionList" prefHeight="131.0" prefWidth="300.0">
            <!-- Populate with available game sessions -->
        </ListView>
    </VBox>
</AnchorPane>
