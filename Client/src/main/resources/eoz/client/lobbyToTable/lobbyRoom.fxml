        <VBox fx:id="gameSettings" spacing="5.0">
            <!-- Game settings elements can be dynamically added here -->
        </VBox>
    </VBox>
    <Label layoutX="14.0" layoutY="14.0" prefHeight="62.0" prefWidth="234.0" text="Lobby Room">
        <font>
          <Font size="37.0"/>
        </font>
